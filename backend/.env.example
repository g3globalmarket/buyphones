# MongoDB Connection
# In production, use a secure MongoDB connection string (e.g. MongoDB Atlas)
MONGODB_URI=mongodb://localhost:27017/electronics-buy

# Server Configuration
PORT=3000
NODE_ENV=development

# Frontend URL (for CORS)
# In production, set this to your frontend domain (e.g. https://yourdomain.com)
FRONTEND_URL=http://localhost:5173

# JWT Configuration
# MUST be overridden in production with a strong random secret
# Generate with: openssl rand -base64 32
JWT_SECRET=default-jwt-secret-change-in-production
JWT_EXPIRES_IN=1h

# Authentication Code Secret
# MUST be overridden in production with a strong random secret
# Generate with: openssl rand -base64 32
CODE_SECRET=default-secret-change-in-production

# Admin Token
# MUST be overridden in production with a strong random token
# Used for admin API access via X-Admin-Token header
# Generate with: openssl rand -base64 32
ADMIN_TOKEN=default-admin-token-change-in-production

# Rate Limiting (global defaults)
# TTL: Time window in seconds for rate limiting
# Limit: Maximum number of requests per IP per time window
THROTTLE_TTL=60
THROTTLE_LIMIT=20

# Super Admin Bootstrap
# Run 'pnpm migrate:seed-super-admin' after setting these values
SUPER_ADMIN_EMAIL=admin@example.com
SUPER_ADMIN_PASSWORD=change-me-in-production

# Email Sending Configuration
# Mode: "console" logs codes to console (dev), "smtp" sends real emails (production)
EMAIL_MODE=console
EMAIL_FROM=no-reply@example.com
EMAIL_SMTP_HOST=smtp.example.com
EMAIL_SMTP_PORT=587
EMAIL_SMTP_USER=your_smtp_user
EMAIL_SMTP_PASS=your_smtp_password

# Auth Request Code Cooldown (seconds)
# Prevents users from requesting login codes too frequently
# Default: 60 seconds
AUTH_REQUEST_CODE_COOLDOWN_SECONDS=60

# App URL (for email templates)
# Used in email HTML templates for links back to the frontend
# In production, set this to your frontend URL (e.g. https://yourdomain.com)
APP_URL=http://localhost:5173
